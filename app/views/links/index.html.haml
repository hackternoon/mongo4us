- model_class = Link.new.class
%h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:href)
      %th= model_class.human_attribute_name(:tag1)
      %th= model_class.human_attribute_name(:tag2)
      %th= model_class.human_attribute_name(:tag3)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @links.each do |link|
      %tr
        %td= link_to link.id, link_path(link)
        %td= link.href
        %td= link.tag1
        %td= link.tag2
        %td= link.tag3
        %td= link.user_id
        %td=l link.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_link_path(link), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), link_path(link), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_link_path, :class => 'btn btn-primary'
