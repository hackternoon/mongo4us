= form_for @link do |f|
  -if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :href
    = f.text_field :href
  .field
    = f.label :tag1
    = f.text_field :tag1
  .field
    = f.label :tag2
    = f.text_field :tag2
  .field
    = f.label :tag3
    = f.text_field :tag3
  .actions
    = f.submit 'Save'
