= form_for @link, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :href, :class => 'control-label'
    .controls
      = f.text_field :href, :class => 'text_field'
  .control-group
    = f.label :tag1, :class => 'control-label'
    .controls
      = f.text_field :tag1, :class => 'text_field'
  .control-group
    = f.label :tag2, :class => 'control-label'
    .controls
      = f.text_field :tag2, :class => 'text_field'
  .control-group
    = f.label :tag3, :class => 'control-label'
    .controls
      = f.text_field :tag3, :class => 'text_field'
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.number_field :user_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), links_path, :class => 'btn'
